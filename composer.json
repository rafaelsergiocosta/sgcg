    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "illuminate/database": "~5.1",
        "slim/twig-view": "^2.3",
        "slim/flash": "^0.4.0",
        "robmorgan/phinx": "^0.10.3"
